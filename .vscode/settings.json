{
  // Use workspace TypeScript version for consistent type checking
  // (VS Code's built-in TS may be older and not honor JSDoc type assertions in .js files)
  "typescript.tsdk": "node_modules/typescript/lib",
  // Ensure Git is enabled when opening this folder/workspace
  "git.enabled": true,
  "githubPullRequests.ignoredPullRequestBranches": [
    "main"
  ],
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "assignee:@me is:open repo:${owner}/${repository}"
    },
    {
      "label": "Created by Me",
      "query": "author:@me is:open"
    },
    {
      "label": "All Issues",
      "query": "is:open"
    }
  ]
}
